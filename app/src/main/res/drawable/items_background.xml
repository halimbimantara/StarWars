<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <gradient
        android:angle="180"
        android:centerColor="#381366"
        android:centerX="0.95"
        android:centerY="0.1"
        android:endColor="@color/yellow"
        android:gradientRadius="60"
        android:startColor="@color/purple_800"
        android:type="linear" />
    <padding
        android:bottom="4dp"
        android:left="5dp"
        android:right="4dp"
        android:top="4dp" />
    <corners android:radius="6dp" />
    <stroke
        android:width="1dp"
        android:color="@color/purple_800"
        android:dashWidth="8dp"/>
</shape>